#include<iostream>

using namespace std;

int main(void) 
{
	int N, L, ans = 0;
	int map[100][100];
	cin >> N >> L;
	for (int i = 0; i < N; i++) 
		for (int j = 0; j < N; j++)
			cin >> map[i][j];
			
	for (int i = 0; i < N; i++)
	{
		int k;
		int cnt = 1;
		for (int j = 0; j < N - 1; j++)
		{
			k = map[i][j] - map[i][j + 1];

			if (k == 0)
				cnt++;
			else if (k == -1 && cnt >= L)
				cnt = 1;
			else if (k == 1 && cnt >= 0)
				cnt = -L + 1;
			else
			{
				cnt = -1;
				break;
			}
		}
		if (cnt >= 0)
			ans++;
		
		cnt = 1;
		for (int j = 0; j < N - 1; j++)
		{
			k = map[j][i] - map[j + 1][i];

			if (k == 0)
				cnt++;
			else if (k == -1 && cnt >= L)
				cnt = 1;
			else if (k == 1 && cnt >= 0)
				cnt = -L + 1;
			else
			{
				cnt = -1;
				break;
			}
		}
		if (cnt >= 0)
			ans++;
	}

	std::cout << ans;

	return 0;
}
