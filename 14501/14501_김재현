#include <iostream>
using namespace std;
int N;
int ans = 0;
int table[2][16] = { 0 };

void solve(int x, int sum)
{
	if (table[0][x] + x - 1 <= N)
	{
		sum += table[1][x];
		if (sum > ans)
			ans = sum;
			
		for (int i = table[0][x] + x; i <= N; i++)
			solve(i, sum);
	}
}

int main()
{
	cin >> N;

	for (int i = 1; i <= N; i++)
		cin >> table[0][i] >> table[1][i];
		
	for (int i = 1; i <= N; i++)
		solve(i,0);
		
	cout << ans;

	return 0;
}
